{
	"comments": {
		"blockComment": [ "(*", "*)" ]
	},
	"brackets": [
		[ "[", "]" ],
		[ "{", "}" ],
		[ "(", ")" ]
	],
	"autoClosingPairs": [
		{ "open": "[", "close": "]", "notIn": [ "comment" ] },
		{ "open": "{", "close": "}", "notIn": [ "comment" ] },
		{ "open": "(", "close": ")", "notIn": [ "comment" ] },
		{ "open": "'", "close": "'", "notIn": [ "comment" ] },
		{ "open": "\"", "close": "\"", "notIn": [ "comment" ] },
		{ "open": "(*", "close": "*)", "notIn": [ "comment" ] }
	],
	"surroundingPairs": [
		[ "[", "]" ],
		[ "{", "}" ],
		[ "(", ")" ],
		[ "'", "'" ],
		[ "\"", "\"" ]
	],
	"onEnterRules": [
		{ "beforeText": "\\w+\\s*=[^;]*$", "action": { "indent": "indent" } },
		{ "beforeText": ";", "action": { "indent": "outdent" } }
	]
}
